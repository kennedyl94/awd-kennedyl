<p id="notice"><%= notice %></p>

<h1>Listing Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Time spent</th>
      <th>Completed </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr class = '_<%= cycle('1' , '0')%>'>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.timespent%> <%= task.timespent == 1? "minute":"minutes"%></td>
        <td><%= task.isDone  %></td> <!--# add soemthing to change to yes no -->
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		<td><%= link_to 'log time', new_time_span_path(task.id) %></td>
		<td><%= task.id %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

