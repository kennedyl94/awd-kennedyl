<p id="notice"><%= notice %></p>

<h1>Listing Time Spans</h1>

<table>
  <thead>
    <tr>
      <th>Start</th>
      <th>End</th>
      <th>Task</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @time_spans.each do |time_span| %>
      <tr>
        <td><%= time_span.start %></td>
        <td><%= time_span.end %></td>
        <td><%= time_span.task %></td>
        <td><%= link_to 'Show', time_span %></td>
        <td><%= link_to 'Edit', edit_time_span_path(time_span) %></td>
        <td><%= link_to 'Destroy', time_span, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

